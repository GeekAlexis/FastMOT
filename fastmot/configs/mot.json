{   
    "size": [1280, 720],

    "video_io": {
        "camera_size": [1920, 1080],
        "camera_fps": 30,
        "buffer_size": 10
    },

    "mot": {
        "detector_type": "PUBLIC",
        "detector_frame_skip": 5,

        "ssd_detector": {
            "model": "SSDInceptionV2",
            "class_ids": [1],
            "tile_overlap": 0.25,
            "tiling_grid": [4, 2],
            "conf_thresh": 0.5,
            "max_area": 70000,
            "merge_iou_thresh": 0.3
        },
        "yolo_detector": {
            "model": "YOLOV4",
            "class_ids": [1],
            "conf_thresh": 0.25,
            "max_area": 900000,
            "nms_thresh": 0.5
        },
        "public_detector": {
            "sequence": "eval/data/MOT17-04",
            "conf_thresh": 0.5,
            "max_area": 900000
        },
        "feature_extractor": {
            "model": "OSNet025",
            "batch_size": 32
        },

        "multi_tracker": {
            "max_age": 10,
            "age_factor": 2,
            "motion_weight": 0.04,
            "max_feature_cost": 0.9,
            "min_iou_cost": 0.4,
            "max_reid_cost": 0.6,
            "duplicate_iou": 0.8,
            "max_feat_overlap": 1,
            "min_register_conf": 0.5,
            "lost_buf_size": 50,
            "n_init": 3,

            "kalman_filter": {
                "small_std_acc": [32, 150],
                "large_std_acc": [256, 650],
                "min_std_det": [4, 4],
                "min_std_flow": [5, 5],
                "std_factor_det": [0.08, 0.08],
                "std_factor_flow": [0.13, 0.13],
                "init_std_pos_factor": 20,
                "init_std_vel_factor": 15,
                "vel_coupling": 0.6,
                "vel_half_life": 1
            },

            "optical_flow": {
                "bkg_feat_scale_factor": [0.1, 0.1],
                "optflow_scale_factor": [0.5, 0.5],
                "feature_density": 0.005,
                "optflow_err_thresh": 100,
                "min_inlier": 5,
                "feature_dist_factor": 0.06,
                "ransac_max_iter": 500,
                "ransac_conf": 0.99,
                "gftt_target_feat_params": {
                    "maxCorners": 1000,
                    "qualityLevel": 0.06,
                    "blockSize": 3
                },
                "fast_bkg_feat_thresh": 15,
                "optflow_params": {
                    "winSize": [5, 5],
                    "maxLevel": 5,
                    "criteria": [3, 10, 0.03]
                }
            }
        }
    }
}
